{
  "source_directory": "C:\\SurgicalVideos\\Source",
  "destination_directory": "C:\\SurgicalVideos\\Anonymized",
  "hash_mapping_file": "hash_mappings.json",
  "supported_formats": [".mp4", ".avi", ".mov", ".mkv", ".wmv", ".flv"],
  "hash_algorithm": "sha256",
  "salt": "surgical_video_salt_2025_secure",
  "azure_blob_settings": {
    "enabled": true,
    "connection_string": "DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net",
    "container_name": "surgical-videos-anonymized",
    "blob_prefix": "videos/",
    "verify_upload": true,
    "max_retries": 3,
    "retry_delay": 30
  },
  "upload_settings": {
    "enabled": true,
    "upload_destination": "azure_blob",
    "backup_original": true,
    "verify_upload": true
  },
  "retention_settings": {
    "keep_source_files": true,
    "archive_after_days": 30,
    "cleanup_orphaned": true
  }
}
